<div class="container-fluid m-5" style="width: 50%;">
  <form action="/records" method="POST">
    <div class="input-group mb-3">
      <label for="name" class="col-sm-2 col-form-label">名稱:</label>
      <input name="name" type="text" class="form-control" placeholder="消費事項..." aria-label="Recipient's username" aria-describedby="basic-addon2">  
    </div>
    <div class="input-group mb-3">
      <label for="date" class="col-sm-2 col-form-label">日期:</label>
      <input name="date" type="date" min="2020-01-01" max="2030-12-31" class="form-control"  aria-describedby="basic-addon3">
    </div>

    <div class="input-group mb-3">
      <label for="category" class="col-sm-2 col-form-label">類別:</label>
      <select name="category" class="form-select" aria-label="Default select example" style="width: 40%;" select="selected">
        <option selected>類別</option>
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
      
    </div>
    <div class="input-group mb-3">
      <label for="amount" class="col-sm-2 col-form-label">金額:</label>
      <input name="amount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
      <span class="input-group-text">.00</span>
    </div>
    <button type="submit" class="btn btn-primary">新增</button>
  </form>
  
</div>